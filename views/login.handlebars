 <!-- login Div-->
<div class="row">
  <div class="ml-14 flex flex-wrap text-white">
    <form class="form login-form text-2xl p-12 bg-white mx-auto rounded-3xl w-96">
      <h2 class="font-semibold text-2xl text-gray-800">Log in</h2>
      <div class="form-group">
        <input for="email-login" class="form-input text-black w-full text-sm text  px-4 py-3 bg-gray-200 focus:bg-gray-100 border  border-gray-200 rounded-lg focus:outline-none focus:border-purple-400" placeholder="Email" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <input for="password-login" placeholder="Passowrd" class="form-input text-black text text-sm px-4 py-3 rounded-lg w-full bg-gray-200 focus:bg-gray-100 border border-gray-200 focus:outline-none focus:border-purple-400" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
     <!-- Signup Div-->
  <div class="text-white text-2xl ml-2">
    <form class="form signup-form form login-form text-2xl p-12 bg-white mx-auto rounded-3xl w-96">
      <h2 class="font-semibold text-2xl text-gray-800">Sign Up</h2>
      <div class="form-group">
        <input for="name-signup" placeholder="Name" class="form-input text-black form-input text text-sm px-4 py-3 rounded-lg w-full bg-gray-200 focus:bg-gray-100 border border-gray-200 focus:outline-none focus:border-purple-400" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <input for="email-signup" placeholder="Email" class="form-input text-black form-input text text-sm px-4 py-3 rounded-lg w-full bg-gray-200 focus:bg-gray-100 border border-gray-200 focus:outline-none focus:border-purple-400" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <input for="password-signup" placeholder="Password" class="form-input text-black form-input text text-sm px-4 py-3 rounded-lg w-full bg-gray-200 focus:bg-gray-100 border border-gray-200 focus:outline-none focus:border-purple-400" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
    </div>
  </div>

